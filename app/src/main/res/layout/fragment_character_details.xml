<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border"
    android:layout_margin="8dp"
    android:padding="8dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.characters.CharacterDetailsFragment">     

        <ImageView
            android:id="@+id/character_imageView"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:contentDescription="@string/character_imageview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/morty_smith" />

        <TextView
            android:id="@+id/character_name_textview"
            style="@style/text_vew_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/character_imageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/character_species_textview"
            style="@style/text_vew_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/species"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/character_imageView"
            app:layout_constraintTop_toBottomOf="@id/character_name_textview" />

        <TextView
            android:id="@+id/character_status_textview"
            style="@style/text_vew_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/character_imageView"
            app:layout_constraintTop_toBottomOf="@id/character_species_textview" />

        <TextView
            android:id="@+id/character_gender_textview"
            style="@style/text_vew_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gender"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/character_imageView"
            app:layout_constraintTop_toBottomOf="@id/character_status_textview" />

        <TextView
            android:id="@+id/character_type_textview"
            style="@style/text_vew_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/type"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/character_imageView"
            app:layout_constraintTop_toBottomOf="@id/character_gender_textview" />

        <TextView
            android:id="@+id/character_created_textview"
            style="@style/text_vew_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/created"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/character_imageView"
            app:layout_constraintTop_toBottomOf="@id/character_type_textview" />

        <!--//////-->

        <TextView
            android:id="@+id/character_name"
            style="@style/text_vew_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/character_species_textview"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Morty Smith" />

        <TextView
            android:id="@+id/character_species"
            style="@style/text_vew_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/character_species_textview"
            app:layout_constraintTop_toBottomOf="@id/character_name"
            tools:text="Human" />

        <TextView
            android:id="@+id/character_status"
            style="@style/text_vew_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/character_species_textview"
            app:layout_constraintTop_toBottomOf="@id/character_species"
            tools:text="Alive" />

        <TextView
            android:id="@+id/character_gender"
            style="@style/text_vew_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/character_species_textview"
            app:layout_constraintTop_toBottomOf="@id/character_status"
            tools:text="Male" />

        <TextView
            android:id="@+id/character_type"
            style="@style/text_vew_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/character_species_textview"
            app:layout_constraintTop_toBottomOf="@id/character_gender"
            tools:text="unknown" />

        <TextView
            android:id="@+id/character_created"
            style="@style/text_vew_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/character_species_textview"
            app:layout_constraintTop_toBottomOf="@id/character_type"
            tools:text="2017-11-04" />

        <View
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#DCD9D9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/character_created" />

    <TextView
        android:id="@+id/character_origin_textview"
        style="@style/text_vew_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/origin"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/character_origin_url"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line4" />

        <TextView
            android:id="@+id/character_origin_name"
            style="@style/text_vew_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@id/character_location_textview"
            app:layout_constraintTop_toBottomOf="@id/line4"
            tools:text="unknown" />

        <TextView
            android:id="@+id/character_origin_url"
            style="@style/text_vew_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            app:layout_constraintStart_toEndOf="@id/character_location_textview"
            app:layout_constraintTop_toBottomOf="@id/character_origin_name"
            tools:text="unknown" />

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#DCD9D9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/character_origin_url" />

        <TextView
            android:id="@+id/character_location_textview"
            style="@style/text_vew_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/location"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/character_location_url"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line1" />

        <TextView
            android:id="@+id/character_location_name"
            style="@style/text_vew_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@id/character_location_textview"
            app:layout_constraintTop_toBottomOf="@id/line1"
            tools:text="Citadel of Ricks" />

        <TextView
            android:id="@+id/character_location_url"
            style="@style/text_vew_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:autoLink="web"
            app:layout_constraintStart_toEndOf="@id/character_location_textview"
            app:layout_constraintTop_toBottomOf="@id/character_location_name"
            tools:text="https://rickandmortyapi.com/api/location/3" />

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#DCD9D9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/character_location_url" />

        <TextView
            android:id="@+id/character_url_textview"
            style="@style/text_vew_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/url"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line2" />

        <TextView
            android:id="@+id/character_url"
            style="@style/text_vew_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:autoLink="web"
            app:layout_constraintStart_toEndOf="@id/character_location_textview"
            app:layout_constraintTop_toBottomOf="@id/line2"
            tools:text="https://rickandmortyapi.com/api/character/2" />

        <TextView
            android:id="@+id/character_image_textview"
            style="@style/text_vew_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/image"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/character_url_textview" />

        <TextView
            android:id="@+id/character_imageUrl"
            style="@style/text_vew_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            app:layout_constraintStart_toEndOf="@id/character_location_textview"
            app:layout_constraintTop_toBottomOf="@id/character_url"
            tools:text="https://rickandmortyapi.com/api/character/avatar/2.jpeg" />

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#DCD9D9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/character_imageUrl" />

        <TextView
            android:id="@+id/character_episode_textview"
            style="@style/text_vew_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/episode"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line3" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/character_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/character_episode_textview" />
        
</androidx.constraintlayout.widget.ConstraintLayout>


